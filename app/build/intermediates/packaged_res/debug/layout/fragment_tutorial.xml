<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tutorial.TutorialFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView_tutorial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Use LHM 3D"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_tutorial_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to LHM 3D! This tutorial will guide you through the process of creating and animating 3D human models from images."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_tutorial_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tutorial Step 1 -->
        <TextView
            android:id="@+id/textView_step1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1: Upload an Image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textView_tutorial_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_step1_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start by uploading a full-body image of a person. For best results, choose an image with good lighting and a clear view of the entire person."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step1_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tutorial Step 2 -->
        <TextView
            android:id="@+id/textView_step2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 2: Wait for Processing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step1_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_step2_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our AI will process your image and create a 3D model. This can take a few minutes depending on the complexity of the image."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step2_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tutorial Step 3 -->
        <TextView
            android:id="@+id/textView_step3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 3: View and Animate"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step2_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_step3_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Once processing is complete, you can view your 3D model and apply different animations to it. Experiment with various poses and movements!"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step3_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tutorial Step 4 -->
        <TextView
            android:id="@+id/textView_step4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 4: Save and Share"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step3_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_step4_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save your favorite animations and share them with friends! You can export animations as videos or GIFs."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step4_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back Button -->
        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textView_step4_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>